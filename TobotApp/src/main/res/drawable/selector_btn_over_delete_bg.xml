    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape_oval_corners_radius" />
            <solid android:color="@color/btn_delete_pressed" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape_oval_corners_radius" />
            <solid android:color="@color/btn_delete_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape_oval_corners_radius" />
            <solid android:color="@color/btn_delete_normal" />
        </shape>
    </item>
</selector>