<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:width="@dimen/shape_btn_map_refresh_size" android:height="@dimen/shape_btn_map_refresh_size" />
            <solid android:color="@color/shape_btn_circle_normal" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="oval">
            <size android:width="@dimen/shape_btn_map_refresh_size" android:height="@dimen/shape_btn_map_refresh_size" />
            <solid android:color="@color/shape_btn_circle_normal" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/shape_btn_circle_normal" />
            <size android:width="@dimen/shape_btn_map_refresh_size" android:height="@dimen/shape_btn_map_refresh_size" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/shape_stroke_width" android:color="@color/shape_btn_circle_normal" />
            <size android:width="@dimen/shape_btn_map_refresh_size" android:height="@dimen/shape_btn_map_refresh_size" />
        </shape>
    </item>
</selector>