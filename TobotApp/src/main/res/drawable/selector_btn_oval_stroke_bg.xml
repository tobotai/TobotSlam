<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape_oval_corners_radius" />
            <stroke android:width="@dimen/shape_stroke_width" android:color="@color/tv_white" />
            <solid android:color="@color/shape_btn_pressed" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape_oval_corners_radius" />
            <stroke android:width="@dimen/shape_stroke_width" android:color="@color/tv_white" />
            <solid android:color="@color/shape_btn_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape_oval_corners_radius" />
            <stroke android:width="@dimen/shape_stroke_width" android:color="@color/tv_white" />
        </shape>
    </item>
</selector>