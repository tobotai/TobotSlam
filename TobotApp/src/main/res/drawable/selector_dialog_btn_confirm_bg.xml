<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/shape_corners" />
            <solid android:color="@color/shape_confirm_pressed" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/shape_corners" />
            <solid android:color="@color/shape_confirm_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/shape_corners" />
            <solid android:color="@color/shape_confirm_normal" />
        </shape>
    </item>
</selector>