<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_item_height">

    <TextView
        android:id="@+id/tv_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@drawable/selector_tv_map_item"
        android:textSize="@dimen/tv_content" />

    <Button
        android:id="@+id/btn_map_delete"
        style="@style/btn_map_style"
        android:layout_alignParentRight="true"
        android:text="@string/btn_map_delete" />

    <Button
        android:id="@+id/btn_map_load"
        style="@style/btn_map_style"
        android:layout_marginRight="@dimen/btn_map_margin_right"
        android:layout_toLeftOf="@id/btn_map_delete"
        android:text="@string/btn_map_load" />
</RelativeLayout>