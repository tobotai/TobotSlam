<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_load_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_layout_margin_top"
        android:textColor="@color/tv_white"
        android:textSize="@dimen/head_tv_size" />

    <com.tobot.bar.progressbar.StripProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sb_speed_height"
        android:layout_marginLeft="@dimen/dialog_layout_margin_left"
        android:layout_marginTop="@dimen/dialog_layout_margin_top"
        android:layout_marginRight="@dimen/dialog_layout_margin_left"
        android:paddingLeft="@dimen/sb_speed_padding_left"
        android:paddingRight="@dimen/sb_speed_padding_left"
        app:bar_bgColor="@color/sb_speed_bg"
        app:bar_centerColor="@color/sb_speed_center"
        app:bar_endColor="@color/sb_speed_end"
        app:bar_height="@dimen/progress_bar_height"
        app:bar_startColor="@color/sb_speed_start"
        app:bar_textShow="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_layout_margin_top"
        android:layout_marginBottom="@dimen/dialog_layout_margin_top"
        android:text="@string/upgrade_ing"
        android:textColor="@color/tv_white"
        android:textSize="@dimen/tv_tips" />
</LinearLayout>